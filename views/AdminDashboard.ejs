<!DOCTYPE html>
<html lang="en">
<head>
 
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f1f2f6;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #212529;
      color: #fff;
      padding: 20px;
      position: fixed;
    }

    .sidebar h4 {
      color: #ffc107;
      margin-bottom: 30px;
    }

    .sidebar .menu-section {
      margin-bottom: 20px;
    }

    .sidebar .menu-section h5 {
      font-size: 16px;
      margin-bottom: 10px;
      cursor: pointer;
      color: #ced4da;
    }

    .sidebar ul {
      list-style: none;
      padding-left: 15px;
      display: none;
    }

    .sidebar ul li {
      margin-bottom: 10px;
      font-size: 14px;
      color: #adb5bd;
      cursor: pointer;
    }

    .sidebar ul li:hover {
      color: #17a2b8;
      text-decoration: underline;
    }

    .main-content {
      margin-left: 270px;
      padding: 40px;
    }

    .active-section h5 {
      color: #0dcaf0;
    }

    .active {
      display: block !important;
    }
  </style>
</head>
<body>
  <%- include('navbar.ejs') %>
  <div class="d-flex">
    <div class="sidebar">
      <h4>Admin Dashboard</h4>

      <div class="menu-section" id="studentSection">
        <h5 onclick="toggleMenu('studentMenu')">ğŸ‘¨â€ğŸ“ Student</h5>
        <ul id="studentMenu">
          <li>Add Student</li>
          <li>View Students</li>
        </ul>
      </div>

      <div class="menu-section" id="categorySection">
        <h5 onclick="toggleMenu('categoryMenu')">ğŸ“š Category</h5>
        <ul id="categoryMenu">
          <li>Add Category</li>
          <li>View Categories</li>
        </ul>
      </div>

      <div class="menu-section" id="bookSection">
        <h5 onclick="toggleMenu('bookMenu')">ğŸ“– Book</h5>
        <ul id="bookMenu">
          <li>Add Book</li>
          <li>View Books</li>
        </ul>
      </div>
    </div>
<div class="main-content container py-4">
  <h2 class="mb-3">Welcome, Admin ğŸ‘‹</h2>
  <p class="mb-4">Use the sidebar to manage students, book categories, and book records efficiently.</p>

  <div class="row">
    <!-- Students Section -->
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Manage Students</h5>
          <p class="card-text">Add, update, view, or delete student records. Maintain accurate student data easily.</p>
          <a href="/students" class="btn btn-primary">Go to Students</a>
        </div>
      </div>
    </div>

    <!-- Categories Section -->
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Manage Categories</h5>
          <p class="card-text">Create and organize book categories to streamline library organization.</p>
          <a href="/categories" class="btn btn-warning">Go to Categories</a>
        </div>
      </div>
    </div>

    <!-- Books Section -->
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Manage Books</h5>
          <p class="card-text">Add new books, update existing ones, or remove books that are no longer available.</p>
          <a href="/books" class="btn btn-success">Go to Books</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Summary or Stats (optional) -->
  <div class="card mt-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Quick Summary</h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">ğŸ“š Total Books: <strong></strong></li>
        <li class="list-group-item">ğŸ‘¥ Total Students: <strong></strong></li>
        <li class="list-group-item">ğŸ“‚ Categories Available: <strong></strong></li>
      </ul>
    </div>
  </div>
</div>


  <script>
    function toggleMenu(id) {
      const menu = document.getElementById(id);
      menu.classList.toggle('active');
    }
  </script>
</body>
</html>
