<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Update Student</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('navbar') %>
  <div class="container-fluid mt-4">
    <h4 class="mb-4">Update Student</h4>
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <% if (typeof msg !== 'undefined' && msg) { %>
          <div class="alert alert-info" id="msgAlert"><%= msg %></div>
        <% } %>
        <form action="/user/update/<%= student.id %>" method="POST" class="reg-student-form-container">
          <div class="mb-3">
            <input type="text" class="form-control" name="name" placeholder="Enter Name" value="<%= student.name %>" required>
          </div>
          <div class="mb-3">
            <input type="email" class="form-control" name="email" placeholder="Enter email" value="<%= student.email %>" required>
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" name="password" placeholder="Enter password" value="<%= student.password %>" required>
          </div>
          <div class="mb-3">
            <select class="form-select" name="role" required>
              <option value="admin" <%= student.role === 'admin' ? 'selected' : '' %>>Admin</option>
              <option value="librarian" <%= student.role === 'librarian' ? 'selected' : '' %>>Librarian</option>
              <option value="student" <%= student.role === 'student' ? 'selected' : '' %>>Student</option>
            </select>
          </div>
          <button type="submit" class="btn btn-outline-dark">Update Student</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    window.onload = function() {
      const msgAlert = document.getElementById('msgAlert');
      if (msgAlert) {
        setTimeout(() => {
          msgAlert.style.display = 'none';
        }, 3000);
      }
    };
  </script>
</body>
</html>
